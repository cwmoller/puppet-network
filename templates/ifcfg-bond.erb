DEVICE=<%= @interface %>
HWADDR=<%= @macaddress %>
MASTER=<%= @master %>
SLAVE=yes
<% if @type %>TYPE=<%= @type %>
<% else %>
TYPE=Ethernet
<% end -%>
<% if @ethtool_opts %>ETHTOOL_OPTS="<%= @ethtool_opts %>"
<% end -%>
<% if @defroute %>DEFROUTE=<%= @defroute %>
<% end -%>
<% if @zone %>ZONE=<%= @zone %>
<% end -%>
<% if @metric %>METRIC=<%= @metric %>
<% end -%>
<% if @nm_controlled %>NM_CONTROLLED=yes
<% else %>NM_CONTROLLED=no
<% end -%>
